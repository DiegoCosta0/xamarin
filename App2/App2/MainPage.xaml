<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App2"
             x:Class="App2.MainPage">
    <StackLayout VerticalOptions="Center" Orientation="Vertical">
        <Label Text="Número 1" HorizontalTextAlignment="Center" />
        <Entry x:Name="value1" Placeholder="Digite um valor"></Entry>
        <Label Text="Número 2" HorizontalTextAlignment="Center" />
        <Entry x:Name="value2" Placeholder="Digite um segundo valor"></Entry>
        <Button x:Name="sum" Text="Somar"></Button>
        <Button x:Name="sub" Text="Subtrair"></Button>
        <Button x:Name="multiple" Text="Multiplicar"></Button>
        <Button x:Name="div" Text="Divisão"></Button>
        <Label x:Name="result" Text="" HorizontalTextAlignment="Center" />
    </StackLayout>
</ContentPage>